<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <h1>ðŸ‘¨Friend Requests ðŸ‘¨</h1>


    <h3>Testing</h3>

    

    <% if( friendRequests.length > 0) { %>
        <div class="container">
            <table class="w3-table">
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
                <% for(let request of friendRequests)  { %>
                <tr>
                    <td><%= request.username %></td>
                    <td><%= request.email %></td>
                    <td>
                        <form action="/accept-request/<%= request.id %>" method="post">
                            <button class="btn" type="submit">Accept Request</button>
                        </form>
                        <form action="/decline-request/<%= request.id %>" method="post">
                            <button class="btn" type="submit" >Decline Request</button>
                        </form>
                    </td>
                </tr>
                <% } %>
                
                <% }  else {%>
                    <h1>No Friend Request Yet!</h1>
                <% } %>
    
            </table>

            <script src="main.js"></script>
            <!-- <script type="text/javascript" src="/public/js/main.js"></script> -->
</body>
</html>